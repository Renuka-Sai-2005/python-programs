def palindrome(s):
    i = 0
    j = len(s) - 1
    while i < j:
        if s[i] != s[j]:
            return False
        i += 1
        j -= 1
    return True

def palindrome_substring(input_str):
    ans = ""
    for i in range(len(input_str)):
        for j in range(i, len(input_str)):
            
            res = input_str[i:j+1]
            if palindrome(res):
                if len(res) > len(ans):
                    ans = res
    return ans


print("Longest Palindromic Substring:", palindrome_substring("babad"))
